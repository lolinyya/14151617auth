{% extends 'base.html.twig' %}

{% block title %}Вход в систему{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center mb-0">Вход в систему</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">
                            {% if error.messageKey == 'Invalid credentials.' %}
                                Неверный номер телефона или пароль
                            {% else %}
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            {% endif %}
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="phone" class="form-label">Номер телефона</label>
                            <input type="text" 
                                   value="{{ last_username }}" 
                                   name="phone" 
                                   id="phone" 
                                   class="form-control" 
                                   required 
                                   autofocus
                                   placeholder="+79991234567">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Пароль</label>
                            <input type="password" 
                                   name="password" 
                                   id="password" 
                                   class="form-control" 
                                   required>
                        </div>

                        <input type="hidden" name="_csrf_token" 
                               value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">Войти</button>
                        </div>

                        <div class="mt-3 text-center">
                            <p class="mb-0">Нет аккаунта? <a href="{{ path('app_register') }}">Зарегистрироваться</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}