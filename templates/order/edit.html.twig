{% extends 'base.html.twig' %}

{% block title %}Редактирование заказа #{{ order.id }}{% endblock %}

{% block body %}
    <h1>Редактирование заказа #{{ order.id }}</h1>
    
    {% if app.user %}
        <div class="alert alert-info">
            <i class="bi bi-person-check"></i> 
            Клиент: <strong>{{ order.people.name }}</strong> ({{ order.people.phone }})
        </div>
    {% endif %}

    {{ form_start(form) }}
        {% if not app.user %}
            {{ form_row(form.people) }}
        {% else %}

            <input type="hidden" name="order[people]" value="{{ app.user.id }}">
        {% endif %}
        
        {{ form_row(form.dishes) }}
        {{ form_row(form.documents) }}
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Сохранить изменения
            </button>
            <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Отмена
            </a>
        </div>
    {{ form_end(form) }}
{% endblock %}