{% extends 'base.html.twig' %}

{% block title %}Заказы{% endblock %}

{% block body %}
<h1>{% if app.user %}Мои заказы{% else %}Все заказы{% endif %}</h1>

{% if app.user %}
<div class="alert alert-info">
    Вы вошли как: {{ app.user.name }} ({{ app.user.phone }})
</div>
{% endif %}

{% if orders|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Клиент</th>
            <th>Телефон</th>
            <th>Дата</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        {% for order in orders %}
        <tr>
            <td>{{ order.id }}</td>
            <td>
                {% if order.people %}
                {{ order.people.name }}
                {% else %}
                <span class="text-muted">Клиент удален</span>
                {% endif %}
            </td>
            <td>
                {% if order.people %}
                {{ order.people.phone }}
                {% else %}
                <span class="text-muted">—</span>
                {% endif %}
            </td>
            <td>
                {% if order.createdAt %}
                {{ order.createdAt|date('d.m.Y H:i') }}
                {% else %}
                <span class="text-muted">—</span>
                {% endif %}
            </td>
            <td>{{ order.status ?? '—' }}</td>
            <td>
                <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-info">Просмотр</a>
                {% if not app.user or (app.user and order.people == app.user) %}

                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-warning">
    {% if app.user %}
    У вас пока нет заказов.
    {% else %}
    Заказы отсутствуют.
    {% endif %}
</div>
{% endif %}

{% if app.user %}
<div class="mt-3">
    <a href="{{ path('app_order_new') }}" class="btn btn-success">Создать новый заказ</a>
    <a href="{{ path('app_export_order') }}" class="btn btn-primary">Экспорт в Excel</a>
</div>
{% else %}
<div class="alert alert-info mt-3">
    <p>Для создания заказа и просмотра данных необходимо <a href="{{ path('app_login') }}">войти в систему</a>.
    </p>
    <p><a href="{{ path('app_register') }}">Зарегистрируйтесь</a>.</p>
</div>
{% endif %}
{% endblock %}