{% extends 'base.html.twig' %}

{% block title %}Новый заказ{% endblock %}

{% block body %}
    <h1>Создание нового заказа</h1>
    
    {% if app.user %}
        <div class="alert alert-info">
            <i class="bi bi-person-check"></i> 
            Заказ будет создан для вас: <strong>{{ app.user.name }}</strong> ({{ app.user.phone }})
        </div>
    {% else %}
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            Вы не авторизованы. После создания заказа рекомендуем 
            <a href="{{ path('app_register') }}">зарегистрироваться</a> или 
            <a href="{{ path('app_login') }}">войти</a> для отслеживания статуса заказов.
        </div>
    {% endif %}

    {{ form_start(form) }}
        {% if app.user %}

            <div class="mb-3">
                <label class="form-label">Клиент</label>
                <input type="text" class="form-control" value="{{ app.user.name }} ({{ app.user.phone }})" readonly>
                <small class="form-text text-muted">Заказ будет создан для вашего аккаунта</small>
            </div>
        {% else %}

            {{ form_row(form.people) }}
        {% endif %}
        
        {{ form_row(form.dishes) }}
        {{ form_row(form.documents) }}
        
        <div class="mt-3">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Создать заказ
            </button>
            <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад к списку
            </a>
        </div>
    {{ form_end(form) }}
{% endblock %}